    <!-- Script del chatbot de Voiceflow -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            console.log("üì¢ Intentando cargar el chatbot...");

            try {
                var v = document.createElement("script");
                v.src = "https://cdn.voiceflow.com/widget-next/bundle.mjs";
                v.type = "text/javascript";
                v.async = true;

                v.onload = function () {
                    if (window.voiceflow && window.voiceflow.chat) {
                        window.voiceflow.chat.load({
                            verify: { projectID: "679b9449856ad419ecfaabba" },
                            url: "https://general-runtime.voiceflow.com",
                            versionID: "production"
                        });
                        console.log("‚úÖ Chatbot cargado correctamente.");
                    } else {
                        console.error("‚ö†Ô∏è Error: Voiceflow no est√° definido correctamente.");
                    }
                };

                v.onerror = function () {
                    console.error("‚ö†Ô∏è Error al cargar el script de Voiceflow.");
                };

                document.body.appendChild(v);
            } catch (error) {
                console.error("‚ö†Ô∏è Error inesperado al cargar el chatbot:", error);
            }
        });

        // Verificaci√≥n de carga de la imagen
        window.onload = function () {
            var img = document.getElementById("bot-image");
            img.onerror = function () {
                document.getElementById("image-status").innerHTML = "‚ö†Ô∏è Imagen no encontrada. Verifica la ruta.";
                console.error("‚ö†Ô∏è Imagen no cargada. Revisa la ruta del archivo.");
            };
            img.onload = function () {
                document.getElementById("image-status").innerHTML = "‚úÖ Imagen cargada correctamente.";
                console.log("‚úÖ Imagen cargada correctamente.");
            };
        };
    </script>

    <!-- Script para mantener la pesta√±a activa -->
    <script>
        function keepAlive() {
            console.log("üîÑ Manteniendo la pesta√±a activa:", new Date().toLocaleTimeString());
        }

        document.addEventListener("visibilitychange", function () {
            if (!document.hidden) {
                keepAlive();
                setInterval(keepAlive, 300000);
            }
        });
    </script>

